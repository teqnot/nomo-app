<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- TopBar -->
    <include layout="@layout/topbar_main"/>

    <!-- ScrollView для прокрутки -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Приветствие -->
            <include layout="@layout/item_greeting_user"/>
            <TextView
                android:id="@+id/textDebtsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Вам должны:"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/sf_pro_display_bold"
                android:layout_marginTop="24dp"/>

            <!-- Разделитель -->
            <View
                android:id="@+id/dividerMainBalance"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/divider_balances"
                android:layout_marginVertical="8dp"/>

            <!-- Баланс -->
            <include layout="@layout/section_balance"/>

            <!-- Список долгов -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewDebts"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- BottomBar -->
    <include layout="@layout/bottombar_main"/>
</LinearLayout>